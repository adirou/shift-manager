<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#F3F3F3">
    <!-- title -->
    <TextView
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/eventSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="sum"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/eventSumCash"
        android:layout_alignEnd="@+id/eventSumCash" />

    <TextView
        android:id="@+id/eventSumCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="sumCash"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="theLocation"
        android:id="@+id/eventLocation"
        android:layout_above="@+id/eventSumCash"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <!-- counter -->

</RelativeLayout>