<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="my.ungersinc.user.shiftmanager.SetWorksActivity"
    android:background="#ffdffffd">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#2196F3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/setMessageTV"
        android:text="txt"
        android:textColor="#FFFFFF"
        android:textSize="16sp"

        android:background="@drawable/textset_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:gravity="start"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="50dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="bottom">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="16dp" tools:context=".SetWorksActivity"
            android:orientation="vertical"
            android:background="#ffdffffd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SetWorkName"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_columnSpan="2" />

            <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workNameET"
        android:hint="@string/SetHWorkName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_marginTop="10dp"
                android:layout_columnWeight="0"
                android:layout_columnSpan="2"
                android:textAlignment="center"
                android:layout_gravity="fill_horizontal"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/SetColor"
                android:id="@+id/textView17"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_columnSpan="2" />

            <FrameLayout

                android:layout_row="1"
                android:layout_column="2"
                android:id="@+id/FLPaint"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"

                android:textColor="#FFFFFF"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/flcolor_shape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_columnSpan="2">


            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/SetDefault"
                android:id="@+id/textView19"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DefaultCB"
                android:layout_row="2"
                android:layout_column="2"
                android:checked="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_columnSpan="2" />

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SetSalaryType"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/spinnerTypeSal"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_marginTop="15dp"
        android:layout_columnSpan="2" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTypeSal"
        android:layout_below="@+id/workNameET"
        android:layout_alignParentEnd="true"
        android:layout_row="3"
        android:layout_column="2"
        android:spinnerMode="dropdown"
        android:layout_marginTop="15dp"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal" /><![CDATA[



            />



            ]]>

            <EditText
